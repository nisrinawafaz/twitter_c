<div class="column">
    <nav class="panel">
        <p class="panel-heading" > PROFILE </p>
        <div class="panel-block">
            <article class="media" >
                <div class="media-left">
                    <figure class="image is-64x64">
                    <%= gravatar_image_tag(current_user.email, size:64, alt: current_user.name) %>
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                            <div class="level is-mobile">
                            <div class="level-item has-centered-text">
                                <div>
                                    <strong><%= current_user.name %></strong><br/>
                                    <small><%= current_user.username %></small>
                                </div>
                            </div>
                            <div class="level-item has-centered-text">
                                <div>
                                    <p class="heading">Tweets</p>
                                    <p class="title is-6"><%= current_user.tweets.count %></p>
                                </div>
                            </div>
                            <div class="level-item has-centered-text">
                                <div>
                                    <p class="heading">Following</p>
                                    <p class="title is-6">1000</p>
                                </div>
                            </div>
                            <div class="level-item has-centered-text">
                                <div>
                                    <p class="heading">Follower</p>
                                    <p class="title is-6">1000</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </nav>
</div>